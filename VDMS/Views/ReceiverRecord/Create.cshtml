@model VDMS.ViewModel.ReceiverRecordViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Hand Over Vehical to user</h5>
                <div class="card-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.VehicleId, "Vehicle No", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.VehicleId, new SelectList(Model.Vehicles, "Id", "VehicleNo"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReceiverId, "Receiver Name", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.ReceiverId, new SelectList(Model.Receivers, "Id", "Name"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ReceiverId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReceiveDate, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ReceiveDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ReceiveDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-2:+2",
                hideIfNoPrevNext: true,

            });

            $('#Status').prop('checked', true);

        });
    </script>

}
